# MongoDB Connection
MONGODB_URI=mongodb://127.0.0.1:27017/cardOrganizerDB

# JWT Secret (change this to a random string in production)
JWT_SECRET=your-secret-key-change-in-production

# Server Port
PORT=3000

# AWS S3 Configuration (for permanent image storage)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-2
AWS_S3_BUCKET=your-s3-bucket-name

# For production deployment with MongoDB Atlas:
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/cardOrganizerDB?retryWrites=true&w=majority
